<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>Sebastian Osses - Portafolio</title>
	</head>
	<body>
		<main class="container">
			<slot />
		</main>
	</body>
</html>

<style is:global>
	
	:root{
		--bg-color: #110016;
		--card-bg-color: rgb(77 0 32);
		--border-color: rgb(82, 0, 121);
		--border-color-light: rgb(204, 0, 255);

	}

	@font-face {
		font-family: "Montserrat";
		src: url("../assets/fonts/Montserrat-VariableFont_wght.ttf")
			format("truetype");
		font-display: swap;
	}

	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	body {
		background-color: var(--bg-color);
		min-height: 100vh;
		font-family: "Montserrat", system-ui, "Franklin Gothic Medium",
			"Arial Narrow", Arial, sans-serif;
	}

	.container {
		display: flex;
		flex-direction: column;
		max-width: 90%;
		width: 1200px;
		margin: 0 auto;
		padding: 50px 0;
	}

	.card {
		overflow: hidden;
		background-color: var(--card-bg-color);
		border-radius: 15px;
		background-image: repeating-conic-gradient(
			rgba(255, 255, 255, 0.021) 0% 25%,
			transparent 0% 50%
		);
		background-size: 10px 10px;
	}

	.circle {
        position: absolute;
        left: -11px;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        background-color: var(--bg-color);
        border: 2px solid var(--border-color-light);
    }

    .experience-item {
        padding-left: 20px;
        position: relative;
        margin-left: 20px;
        border-left: 3px solid var(--border-color-light);
        padding-bottom: 30px;
    }
    .experience-info {
        display: flex;
        flex-direction: column;
    }

    .date {
        padding: 5px 10px;
        color: white;
        background-color: var(--border-color-light);
        border-radius: 15px;
        font-weight: 800;
    }

    .experience-list {
        margin-top: 20px;
        padding-left: 20px;
        color: white;
        max-width: 350px;
        display: flex;
        flex-direction: column;
        gap: 10px;

        li {
            font-size: 17px;
        }
    }

    .company-name {
        color: whitesmoke;
        font-weight: 800;
        letter-spacing: 2px;
        margin-top: 20px;
        font-size: 20px;
    }

    .education {
        margin-top: 50px;
    }

	::-webkit-scrollbar {
		width: 8px; /* Para barras verticales */
		height: 12px; /* Para barras horizontales */
	}

	/* Cambia el color de fondo de la barra de desplazamiento */
	::-webkit-scrollbar-track {
		background: transparent; /* Color del fondo */
	}

	/* Cambia el color del "thumb" (la parte que se mueve) */
	::-webkit-scrollbar-thumb {
		background: #71008d; /* Color del "thumb" */
		border-radius: 6px; /* Bordes redondeados */
	}

	/* Cambia el color del "thumb" al pasar el mouse */
	::-webkit-scrollbar-thumb:hover {
		background: #be00be;
	}
</style>
